<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dk.aau.cs.giraf.categorygame"
    android:versionCode="1"
    android:versionName="1.0"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <!-- For tablet use only -->
    <supports-screens
        android:largeScreens="true"
        android:normalScreens="false"
        android:requiresSmallestWidthDp="600"
        android:smallScreens="false"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/train_icon"
        android:label="@string/app_name"
        android:theme="@style/GirafTheme"
        tools:replace="icon,label,theme">

        <activity
            android:name="dk.aau.cs.giraf.categorygame.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="dk.aau.cs.giraf.categorygame.SaveDialogActivity"
            android:label="@string/title_activity_save_dialog"
            android:screenOrientation="landscape"
            android:theme="@style/dialog_theme" >
            <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="dk.aau.cs.giraf.categorygame.MainActivity"/>

        </activity>
        <activity
            android:name="dk.aau.cs.giraf.categorygame.opengl.GameActivity"
            android:label="@string/title_activity_game"
            android:screenOrientation="landscape" >
			<meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="dk.aau.cs.giraf.categorygame.MainActivity" />
            </activity>
        <provider
            android:name="dk.aau.cs.giraf.localdb.DatabaseProvider"
            android:authorities="dk.aau.cs.giraf.categorygame.provider"
            android:enabled="true"
            android:exported="true"/>
    </application>
</manifest>
